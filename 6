#!/bin/bash

# Check if any Docker container is running
running_containers=$(docker ps -q)

if [ -z "$running_containers" ]; then
  echo "No Docker containers are currently running."
else
  echo "Docker containers are running."

  # Choose the first running container (you can modify this as needed)
  container_id=$(echo "$running_containers" | head -n 1)
  
  echo "Accessing container: $container_id"

  # Execute ./env.sh inside the container
  docker exec -it "$container_id" bash -c "cd /path/to/your/script && ./env.sh"
fi
